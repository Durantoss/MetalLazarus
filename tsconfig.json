{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": []
  },
  "include": [
    "server.ts",
    "lib/**/*",
    "routes/**/*",
    "controllers/**/*",
    "models/**/*",
    "middlewares/**/*"
  ],
  "exclude": [
    "app/**/*",
    "components/**/*",
    "hooks/**/*",
    "server.alt.ts"
  ]
}